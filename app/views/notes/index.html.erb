<p style="color: green"><%= notice %></p>

<h1>Notes</h1>
<% if user_signed_in? %>
  <div id="notes">
    <% @notes.each do |note| %>
    <% if note.user  == current_user%>
      <%= render note %>
      <p>
        <%= link_to "Show this note", note %>
      </p>
      <% end %>
    <% end %>
  </div>

  <%= link_to "New note", new_note_path %>
<% end %>